APP_NAME=Laravel
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://api.globalzsolutions.local
APP_TIMEZONE=Asia/Beirut

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

PHP_CLI_SERVER_WORKERS=4

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Landlord Database Configuration (for tenants table)
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=nick_globalz
DB_USERNAME=root
DB_PASSWORD=

# Tenant Database Configuration (optional defaults)
DB_DATABASE_TENANT=
DB_USERNAME_TENANT=root
DB_PASSWORD_TENANT=

# Session Configuration (for multitenancy cross-domain)
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null
SESSION_SAME_SITE=none
SESSION_SECURE_COOKIE=false

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database

# Activity Log Configuration
ACTIVITY_LOG_ASYNC=false
ACTIVITY_LOG_BATCH_WINDOW=2
# Auto-delete logs older than X days (null or 0 = keep forever)
ACTIVITY_LOG_RETENTION_DAYS=90
# Enable automatic scheduled cleanup (requires cron job)
ACTIVITY_LOG_AUTO_CLEANUP=false

CACHE_STORE=database
# CACHE_PREFIX=

MEMCACHED_HOST=127.0.0.1

REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

MAIL_MAILER=log
MAIL_SCHEME=null
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

VITE_APP_NAME="${APP_NAME}"

# CORS Configuration for Multitenancy
CORS_PATHS=api/*,sanctum/csrf-cookie
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS,PATCH
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:4173
CORS_ALLOWED_ORIGINS_PATTERNS=/^https?:\/\/.*\.globalzsolutions\.local$/
CORS_ALLOWED_HEADERS=Accept,Authorization,Content-Type,X-Requested-With,X-CSRF-TOKEN
CORS_MAX_AGE=0
CORS_SUPPORTS_CREDENTIALS=true

# Sanctum Configuration for Multitenancy
SANCTUM_STATEFUL_DOMAINS=localhost:5173,localhost:4173,*.globalzsolutions.local

# Login Rate Limiting
LOGIN_MAX_ATTEMPTS=201
LOGIN_BLOCK_DURATION=3600
